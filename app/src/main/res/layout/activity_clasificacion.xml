<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10sp"
    tools:context=".Clasificacion">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginBottom="5sp"
        android:gravity="center"
        android:padding="15sp"
        android:text="REGISTRAR CLASIFICACION"
        android:textColor="#000"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/edtCodigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Codigo:"
        android:inputType="number" />

    <TextView
        android:id="@+id/txtNombreCientifico"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:text="Nombre Cientifico:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edtReino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Reino:"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edtDivision"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Division:"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edtClase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Clase:"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edtOrden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Orden:"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edtFamilia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Familia:"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edtGenero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Genero:"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edtEspecie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Especie:"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnRegistrarC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:onClick="registrarClasificacion"
        android:text="REGISTRAR" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:onClick="Anterior"
        android:text="REGRESAR" />

</LinearLayout>